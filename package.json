  "dependencies": {
    "http-server": "^0.11.1",
    "lighthouse-ci": "^1.4.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-inliner": "^1.0.10",
    "parcel-plugin-static-files-copy": "^2.0.0"
  },
  "description": "",
  "homepage": "https://github.com/Shuunen/folio#readme",
  "keywords": [],
  "license": "GPL-3.0",
  "name": "folio",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shuunen/folio.git"
  },
  "scripts": {
    "build": "run-s clean:before parcel clean:after",
    "clean:after": "npx rimraf dist/*.svg",
    "clean:before": "npx rimraf dist/*",
    "deploy": "cd dist && npx 1mb-cli deploy && cd ..",
    "dev": "parcel src/index.html",
    "lint": "npx standard \"src/**/*.js\" --fix",
    "parcel": "parcel build src/index.html --public-url .",
    "serve": "http-server dist",
    "test": "npm-run-all build --parallel serve test:lh --race",
    "test:lh": "lighthouse-ci http://127.0.0.1:8080/ --performance=99 --accessibility=100 --best-practices=86 --seo=100 --pwa=38"
  },
  "version": "1.0.0"
}